<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:layout_margin="@dimen/d20dp">

    <TextView
            android:id="@+id/startDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_start_date"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/d20dp"
            android:gravity="left|center_vertical"
            android:drawablePadding="@dimen/d20dp"
            android:drawableRight="@drawable/calendar"/>

    <TextView
            android:id="@+id/endDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_end_date"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/startDate"
            android:layout_marginTop="@dimen/d40dp"
            android:gravity="left|center_vertical"
            android:drawablePadding="@dimen/d20dp"
            android:drawableRight="@drawable/calendar"/>

    <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/endDate"
            android:layout_marginTop="@dimen/d40dp"
            android:gravity="left|center_vertical"
            android:drawablePadding="@dimen/d20dp"
            android:visibility="invisible"
    />

    <Button
            android:id="@+id/calculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calculate"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/result"
            android:layout_marginTop="@dimen/d40dp"
            android:gravity="center"
            android:drawablePadding="@dimen/d20dp"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    />


</android.support.constraint.ConstraintLayout>